{
	"name": "AltTranslate",
	"version": "0.1",
	"description": "AltTranslate translates the text selected while pressing Alt ( Option ) key.",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "AltTranslate",
		"popup": "popup.html"
	},
	"icons": {
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background_page":"global.html",
	"permissions": [
		"tabs", "<all_urls>"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["style.css"],
			"js" : [ "getLargestZIndex.js", "injected.js" ]
		}
	]
}